<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <div class="container">
        <div class="topnav">
            <a class="active" href="/">Home</a>
            <a href="/create">Create User</a>
        </div>
        <div class="table-container">
            <h2 class="title">List user</h2>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Name</th>
                        <th>City</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% listUser.forEach((element, index)=> { %>
                        <tr>
                            <td><%= element.id %></td>
                            <td><%= element.email %></td>
                            <td><%= element.name %></td>
                            <td><%= element.city %></td>
                            <td>
                                <button>Edit</button>
                                <button>Delete</button>
                            </td>
                        </tr>
                    <% }); %>


                </tbody>
            </table>
        </div>
    </div>
</body>

</html>